@model Charity.Web.Areas.Recipients.Models.FoodRequestCommentCreateModel

<div class="well bs-component">
    @using (Ajax.BeginForm("Create", "FoodRequestsComments", new { Area = "Recipients" },
        new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.InsertAfter,
            UpdateTargetId = "comments",
            OnSuccess = "clearCommentText",
        },
        new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.FoodRequestId)

        <fieldset>
            <legend>Add comment</legend>

            @Html.EditorFor(m => m.Text)

            <div class="form-group">
                <div class="col-lg-9 col-lg-offset-2">
                    <button class="btn btn-primary" type="submit">Add comment</button>
                </div>
            </div>
        </fieldset>
    }
</div>
