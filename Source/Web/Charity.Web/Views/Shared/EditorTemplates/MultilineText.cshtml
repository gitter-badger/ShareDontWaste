@model string

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "col-lg-3 control-label" })

    <div class="col-lg-9">
        @Html.TextAreaFor(m => m, new { @class = "form-control", @rows = "3" })

        <span class="help-block text-danger">
            @Html.ValidationMessageFor(m => m)
        </span>
    </div>
</div>